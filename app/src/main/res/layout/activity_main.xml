<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="273dp"
            android:layout_height="29dp"
            android:text="@string/main_label"
            android:id="@+id/selectedFoodTxt"
            app:fontFamily="sans-serif" android:textSize="24sp" android:typeface="sans" android:lineSpacingExtra="8sp"
            android:textStyle="bold|italic" android:textAllCaps="true"
            android:layout_marginStart="8dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/logoImg"
            app:layout_constraintBottom_toTopOf="@+id/foodPriceLabel" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.516" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="138dp"
            android:layout_height="95dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/logoImg"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
    />
    <Button
            android:text="Decide!"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/decideBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#587D8D" tools:text="Decide!"
            android:textSize="20sp" android:textColor="#FAFFFFFF"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/foodNameTxt" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:hint="add food name..."
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/foodPriceTxt"/>
    <Button
            android:text="Add Food"
            android:layout_width="236dp"
            android:layout_height="45dp"
            android:id="@+id/addFoodBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/decideBtn"
            android:background="#577C8D" android:textColor="#FFFFFF" android:layout_marginBottom="12dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/foodPriceTxt"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodBtn"
            android:layout_marginBottom="20dp" android:hint="add food price..."/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodPriceLabel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:text="00.00" app:layout_constraintHorizontal_bias="0.571"
            android:textSize="18sp"
            android:layout_marginTop="88dp" app:layout_constraintTop_toBottomOf="@+id/logoImg"/>
    <TextView
            android:text="Price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodPrice"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/foodPriceLabel"
            android:layout_marginRight="8dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/logoImg" app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>